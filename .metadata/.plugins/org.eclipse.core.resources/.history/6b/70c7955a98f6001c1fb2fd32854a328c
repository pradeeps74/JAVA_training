<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Event Handling</title>
</head>
<body>
<form action="">
<label for="firstName">First Name</label>
<input type="text" name="firstName" id="firstName"/>
<label for="lastName">Last Name</label>
<input type="text" name="lastName" id="lastName"/>
<label for="code">Code</label>
<input type="text" name="code" id="code">
</form>
<script type="text/javascript">
var firstName=document.getElementById("firstName")
var lastName=document.getElementById("lastName")
var code=document.getElementById("code")
var result;
firstName.addEventListener('blur',function(){
var nameEntered=firstName.value;
result=nameEntered.substring(0,3);
});
lastName.addEventListener('blur',function(){
	
	var nameEntered1=lastName.value;
	var result1=nameEntered1.substring(nameEntered1.length-3,nameEntered1.length); 
	code.value=result.concat(result1)
	 
}); 
</script>

</body>
</html>